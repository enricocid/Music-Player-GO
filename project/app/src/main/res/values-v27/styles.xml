<resources>

    <!-- LIGHT THEME -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="icon_color">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="secondary_bg_color">@color/light</item>
        <item name="theme_icon">@drawable/ic_invert_theme</item>
        <item name="android:navigationBarColor">@color/light</item>
        <item name="android:statusBarColor">?attr/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleLight</item>
        <item name="android:colorEdgeEffect">?attr/accent_color</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- INVERTED THEME -->
    <style name="AppThemeInverted" parent="android:Theme.Material.NoActionBar">
        <item name="icon_color">@color/white</item>
        <item name="secondary_bg_color">@color/inverted</item>
        <item name="theme_icon">@drawable/ic_invert_theme_off</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/inverted</item>
        <item name="android:statusBarColor">?attr/accent_color</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleInverted</item>
        <item name="android:colorEdgeEffect">?attr/accent_color</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
