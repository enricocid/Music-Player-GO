<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controls_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/panel_color"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:orientation="vertical">

    <!-- PLAYER_CONTROLS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/panel_color"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/replay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:contentDescription="@string/app_name"
            android:onClick="reset"
            android:padding="8dp"
            android:src="@drawable/ic_repeat_24dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:contentDescription="@string/app_name"
            android:onClick="skipPrev"
            android:padding="8dp"
            android:src="@drawable/ic_skip_previous_24dp" />

        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:onClick="resumeOrPause"
            android:padding="8dp"
            android:src="@drawable/ic_play_arrow_24dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:contentDescription="@string/app_name"
            android:onClick="skipNext"
            android:padding="8dp"
            android:src="@drawable/ic_skip_next_24dp" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:contentDescription="@string/app_name"
            android:onClick="showSettingsPopup"
            android:padding="8dp"
            android:src="@drawable/ic_settings_24dp" />
    </LinearLayout>

    <!-- PLAYER SEEK TO BAR -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:progressDrawable="@drawable/seekbar"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/song_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:shadowColor="?attr/card_color"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:shadowColor="?attr/card_color"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="?android:textColorPrimary" />
    </FrameLayout>

    <!-- PLAYING SONG INFO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/panel_color"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/playing_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textAlignment="textStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/playing_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/enjoy"
            android:textAlignment="textStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <!-- THE ANIMATED ARROW -->
    <ImageButton
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ripple"
        android:contentDescription="@string/app_name"
        android:onClick="expandPanel"
        android:src="@drawable/ic_arrow_up_24dp" />
</LinearLayout>