<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- This will set the fade in animation on all the activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Style for search bar -->
    <style name="SearchBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <!-- Style for search view -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_round_search</item>
        <item name="closeIcon">@drawable/ic_round_close_red</item>
    </style>
</resources>
