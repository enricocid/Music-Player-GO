<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/category_appearance">

        <Preference
            app:dialogTitle="@string/theme_pref_title"
            app:key="@string/theme_pref"
            app:title="@string/theme_pref_title"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:icon="@drawable/ic_colorize"
            app:key="@string/accent_pref"
            app:title="@string/accent_pref_title" />

        <SwitchPreference
            android:summaryOff="@string/immersive_pref_summary_off"
            app:defaultValue="false"
            app:dialogTitle="@string/immersive_pref_title"
            app:key="@string/immersive_pref"
            app:summaryOn="@string/immersive_pref_summary_on"
            app:title="@string/immersive_pref_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_general">

        <SwitchPreference
            android:summaryOff="@string/fast_scroll_pref_summary_off"
            app:defaultValue="true"
            app:dialogTitle="@string/fast_scroll_pref_title"
            app:key="@string/fast_scroll_pref"
            app:summaryOn="@string/fast_scroll_pref_summary_on"
            app:title="@string/fast_scroll_pref_title" />

        <SwitchPreference
            android:summaryOff="@string/search_bar_pref_summary_off"
            app:defaultValue="true"
            app:dialogTitle="@string/search_bar_pref_title"
            app:key="@string/search_bar_pref"
            app:summaryOn="@string/search_bar_pref_summary_on"
            app:title="@string/search_bar_pref_title" />

        <Preference
            app:key="@string/hidden_items_pref"
            app:title="@string/hidden_items_pref_title" />

        <SwitchPreference
            android:summaryOff="@string/focus_pref_summary_off"
            app:defaultValue="true"
            app:dialogTitle="@string/focus_pref_title"
            app:key="@string/focus_pref"
            app:summaryOn="@string/focus_pref_summary_on"
            app:title="@string/focus_pref_title" />

        <SwitchPreference
            android:summaryOff="@string/headset_pref_summary_off"
            app:defaultValue="true"
            app:dialogTitle="@string/headset_pref_title"
            app:key="@string/headset_pref"
            app:summaryOn="@string/headset_pref_summary_on"
            app:title="@string/headset_pref_title" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
